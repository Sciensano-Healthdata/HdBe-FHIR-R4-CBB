         <binding>
            <strength value="required"/>
            <description value="ChangingPosition codes"/>
            <valueSet value="https://fhir.healthdata.be/ValueSet/HoudingVeranderen"/>
         </binding>
      </element>
        <element id="mobility.maintaining_position">
         <path value="mobility.maintaining_position"/>
