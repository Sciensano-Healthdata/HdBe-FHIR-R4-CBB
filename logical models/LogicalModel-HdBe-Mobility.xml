                <extension url="http://hl7.org/fhir/StructureDefinition/translation">
                    <extension url="lang">
                        <valueCode value="nl-NL"/>
                    </extension>
                    <extension url="content">
                        <valueMarkdown value="HoudingHandhaven"/>
                    </extension>
                </extension>
            </short>
         <definition value="Maintaining position is staying in the same position, such as sitting in a chair or standing, when required.">
                <extension url="http://hl7.org/fhir/StructureDefinition/translation">
                    <extension url="lang">
                        <valueCode value="nl-NL"/>
                    </extension>
                    <extension url="content">
                        <valueMarkdown value="Het handhaven van houding is het, waar nodig, de zelfde lichaamshouding bewaren, zoals blijven zitten of staan. "/>
