            <map value="advance_directive.comment"/>
         </mapping>
      </element>
      <element id="Consent.status">
         <path value="Consent.status"/>
         <comment value="This element has no functional counterpart in the zib and cannot be implicitly mapped to other concepts. Unless a more appropriate status is recorded, it is assumed that only _active_ Consent resources will be exchanged."/>
      </element>
      <element id="Consent.scope">
         <path value="Consent.scope"/>
