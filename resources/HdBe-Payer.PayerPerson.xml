        <identity value="zib-payer-v3.1.1-2020EN" />
        <map value="NL-CM:1.1.2" />
        <comment value="PayerPerson" />
      </mapping>
      <mapping>
        <identity value="HdBe-Payer" />
        <map value="Payer.PayerPerson" />
      </mapping>
